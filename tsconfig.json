{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["esnext"],
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "build",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*", "build/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "build", "src/test"]
}
