{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["esnext"],
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "typeRoots": ["./@types", "./node_modules/@types"],
    "outDir": "build",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*", "build/*"]
    }
  },
  "include": ["src/**/*.ts"]
}
